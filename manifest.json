{
  "manifest_version": 2,

  "name": "Gumiviet - Checking Time",
  "description": "This extension integrates with chatwork.com",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/jquery-1.9.0.js", "js/subscribe.js"]
  },
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ]
}